<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="494px"
    android:layout_height="327px"
    android:background="@drawable/pay_confirm_dialog_bg"
    android:orientation="vertical"
    android:padding="35px"
    >


    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10px"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay_confirm"
            android:textSize="30px"
            android:textColor="#616161"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/content_text"
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:layout_marginTop="10px"
        android:text=""
        android:padding="10px"
        android:textSize="25px"
        android:lineSpacingExtra="10px"
        android:textColor="#616161"
        />

    <LinearLayout
        android:layout_marginTop="10px"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/confirm_btn"
            android:layout_width="154px"
            android:layout_height="60px"
            android:text="确定"
            android:textColor="#f2f2f2"
            android:background="@drawable/jinyuan_btn_selector"
            />

        <Button
            android:id="@+id/cancel_btn"
            android:layout_marginLeft="50px"
            android:layout_width="154px"
            android:layout_height="60px"
            android:text="取消"
            android:textColor="#f2f2f2"
            android:background="@drawable/jinyuan_btn_selector"
            />
    </LinearLayout>

</LinearLayout>